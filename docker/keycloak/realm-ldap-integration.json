{
  "realm": "nemakiware",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Regular user role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      }
    ]
  },
  "users": [
    {
      "username": "testuser",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "User",
      "email": "testuser@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    },
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "admin",
          "temporary": false
        }
      ],
      "realmRoles": ["admin", "user"]
    },
    {
      "username": "ldapuser1",
      "enabled": true,
      "emailVerified": true,
      "firstName": "LDAP User",
      "lastName": "One",
      "email": "ldapuser1@nemakiware.example.com",
      "credentials": [
        {
          "type": "password",
          "value": "ldappass1",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    },
    {
      "username": "ldapuser2",
      "enabled": true,
      "emailVerified": true,
      "firstName": "LDAP User",
      "lastName": "Two",
      "email": "ldapuser2@nemakiware.example.com",
      "credentials": [
        {
          "type": "password",
          "value": "ldappass2",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    },
    {
      "username": "ldapadmin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "LDAP",
      "lastName": "Administrator",
      "email": "ldapadmin@nemakiware.example.com",
      "credentials": [
        {
          "type": "password",
          "value": "ldapadminpass",
          "temporary": false
        }
      ],
      "realmRoles": ["admin", "user"]
    }
  ],
  "clients": [
    {
      "clientId": "nemakiware-oidc-client",
      "name": "NemakiWare UI (OIDC)",
      "description": "OIDC client for NemakiWare React UI",
      "enabled": true,
      "publicClient": true,
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "http://localhost:8080/*",
        "http://localhost:5173/*",
        "http://127.0.0.1:8080/*",
        "http://127.0.0.1:5173/*"
      ],
      "webOrigins": ["*"],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "nemakiware-sp",
      "name": "NemakiWare SP (SAML)",
      "description": "SAML Service Provider for NemakiWare",
      "enabled": true,
      "protocol": "saml",
      "fullScopeAllowed": true,
      "frontchannelLogout": true,
      "attributes": {
        "saml.assertion.signature": "false",
        "saml.force.post.binding": "true",
        "saml.server.signature": "true",
        "saml.authnstatement": "true",
        "saml_name_id_format": "username"
      },
      "redirectUris": [
        "http://localhost:8080/*",
        "http://localhost:5173/*"
      ],
      "baseUrl": "http://localhost:8080/core/ui"
    }
  ]
}
