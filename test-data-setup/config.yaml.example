# NemakiWare Test Environment Setup Configuration
# This file defines the test data structure for populating a clean NemakiWare instance

# CMIS Connection Settings (Browser Binding)
cmis:
  browser_url: "http://localhost:8080/core/browser/bedroom"
  repository_id: "bedroom"
  username: "admin"
  password: "admin"

# REST API Settings (for user/group/type management)
rest_api:
  base_url: "http://localhost:8080/core/rest"
  username: "admin"
  password: "admin"

# Organization Structure
organizations:
  - id: "torishimariyaku"
    name: "取締役"
    parent: null
  - id: "soumu"
    name: "総務部"
    parent: null
  - id: "houmu"
    name: "法務部"
    parent: null
  - id: "eigyo"
    name: "営業部"
    parent: null
  - id: "eigyo_1ka"
    name: "第一営業課"
    parent: "eigyo"
  - id: "eigyo_2ka"
    name: "第二営業課"
    parent: "eigyo"
  - id: "jouhou"
    name: "情報システム部"
    parent: null

# User Settings
users:
  per_organization: 3
  password: "password123"

# Folder Structure under /sites
sites_folders:
  create_org_folders: true
  org_folder_permissions:
    members_read: true
    members_write: true

# Root Level Folders
root_folders:
  - id: "shanai_kitei"
    name: "社内規程"
    permissions:
      - principal: "soumu"
        permission: "cmis:write"
      - principal: "GROUP_EVERYONE"
        permission: "cmis:read"
    content:
      type: "test:policy"
      count: 10
      formats:
        - extension: "docx"
          ratio: 1.0
      pages: 3

  - id: "keiyakusho"
    name: "契約書"
    permissions:
      - principal: "houmu"
        permission: "cmis:write"
      - principal: "GROUP_EVERYONE"
        permission: "cmis:write"
    content:
      type: "test:contract"
      count: 40
      formats:
        - extension: "pdf"
          ratio: 1.0
      pages: 5

  - id: "invoice"
    name: "インボイス"
    permissions:
      - principal: "GROUP_EVERYONE"
        permission: "cmis:read"
    content:
      type: "test:invoice"
      count: 100
      formats:
        - extension: "xlsx"
          ratio: 1.0
      pages: 1

# Custom Type Definitions
custom_types:
  # Invoice document type with extended properties
  - type_id: "test:invoice"
    display_name: "請求書"
    description: "請求書ドキュメントタイプ"
    parent_type: "nemaki:document"
    properties:
      - id: "test:invoiceNumber"
        name: "請求番号"
        type: "string"
        required: false
        queryable: true
      - id: "test:customerName"
        name: "顧客名"
        type: "string"
        required: false
        queryable: true
      - id: "test:amount"
        name: "請求金額"
        type: "integer"
        required: false
        queryable: true
      - id: "test:issueDate"
        name: "発行日"
        type: "datetime"
        required: false
        queryable: true
      - id: "test:invoiceStatus"
        name: "ステータス"
        type: "string"
        required: false
        queryable: true

  # Contract document type with extended properties
  - type_id: "test:contract"
    display_name: "契約書"
    description: "契約書ドキュメントタイプ"
    parent_type: "nemaki:document"
    properties:
      - id: "test:contractNumber"
        name: "契約番号"
        type: "string"
        required: false
        queryable: true
      - id: "test:partyName"
        name: "契約相手方"
        type: "string"
        required: false
        queryable: true
      - id: "test:startDate"
        name: "契約開始日"
        type: "datetime"
        required: false
        queryable: true
      - id: "test:endDate"
        name: "契約終了日"
        type: "datetime"
        required: false
        queryable: true
      - id: "test:contractType"
        name: "契約種別"
        type: "string"
        required: false
        queryable: true

  # Policy document type for internal regulations
  - type_id: "test:policy"
    display_name: "社内規程"
    description: "社内規程ドキュメントタイプ"
    parent_type: "nemaki:document"
    properties:
      - id: "test:policyNumber"
        name: "規程番号"
        type: "string"
        required: false
        queryable: true
      - id: "test:department"
        name: "管理部門"
        type: "string"
        required: false
        queryable: true
      - id: "test:effectiveDate"
        name: "施行日"
        type: "datetime"
        required: false
        queryable: true
      - id: "test:reviewDate"
        name: "次回見直し日"
        type: "datetime"
        required: false
        queryable: true
      - id: "test:policyVersion"
        name: "版数"
        type: "string"
        required: false
        queryable: true

