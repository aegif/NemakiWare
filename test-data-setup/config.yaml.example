# NemakiWare Test Environment Setup Configuration
# This file defines the test data structure for populating a clean NemakiWare instance

# CMIS Connection Settings
cmis:
  url: "http://localhost:8080/core/atom11"
  repository_id: "bedroom"
  username: "admin"
  password: "admin"

# REST API Settings (for user/group/type management)
rest_api:
  base_url: "http://localhost:8080/core/rest"
  username: "admin"
  password: "admin"

# Organization Structure
organizations:
  - id: "torishimariyaku"
    name: "取締役"
    parent: null
  - id: "soumu"
    name: "総務部"
    parent: null
  - id: "houmu"
    name: "法務部"
    parent: null
  - id: "eigyo"
    name: "営業部"
    parent: null
  - id: "eigyo_1ka"
    name: "第一営業課"
    parent: "eigyo"
  - id: "eigyo_2ka"
    name: "第二営業課"
    parent: "eigyo"
  - id: "jouhou"
    name: "情報システム部"
    parent: null

# User Settings
users:
  per_organization: 3
  password: "password123"

# Folder Structure under /sites
sites_folders:
  create_org_folders: true
  org_folder_permissions:
    members_read: true
    members_write: true

# Root Level Folders
root_folders:
  - id: "shanai_kitei"
    name: "社内規程"
    permissions:
      - principal: "soumu"
        permission: "cmis:write"
      - principal: "CMIS_ANYONE"
        permission: "cmis:read"
    content:
      type: "nemaki:document"
      count: 20
      formats:
        - extension: "docx"
          ratio: 0.5
        - extension: "pptx"
          ratio: 0.5
      pages: 3

  - id: "keiyakusho"
    name: "契約書"
    permissions:
      - principal: "houmu"
        permission: "cmis:write"
      - principal: "CMIS_ANYONE"
        permission: "cmis:write"
    content:
      type: "test:contract"
      count: 40
      formats:
        - extension: "pdf"
          ratio: 1.0
      pages: 5

  - id: "invoice"
    name: "インボイス"
    permissions:
      - principal: "CMIS_ANYONE"
        permission: "cmis:read"
    content:
      type: "test:invoice"
      count: 100
      formats:
        - extension: "xlsx"
          ratio: 1.0
      pages: 1

# Custom Type Definitions
custom_types:
  - type_id: "test:invoice"
    display_name: "Invoice"
    description: "Invoice document type"
    parent_type: "nemaki:document"
    properties:
      - id: "test:invoice_no"
        name: "Invoice_No"
        type: "string"
        required: false
        queryable: true
      - id: "test:sum"
        name: "Sum"
        type: "integer"
        required: false
        queryable: true

  - type_id: "test:contract"
    display_name: "Contract"
    description: "Contract document type"
    parent_type: "nemaki:document"
    properties:
      - id: "test:contract_no"
        name: "Contract_No"
        type: "string"
        required: false
        queryable: true
      - id: "test:confidential"
        name: "Confidential"
        type: "boolean"
        required: false
        queryable: true

