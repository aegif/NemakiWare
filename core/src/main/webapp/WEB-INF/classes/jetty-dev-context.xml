<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Development-specific configuration for Jetty environment -->
    <!-- Override SolrUtil with MockSolrUtil when solr.enabled=false -->
    
    <bean id="mockSolrUtil" class="jp.aegif.nemaki.cmis.aspect.query.mock.MockSolrUtil">
        <property name="propertyManager">
            <ref bean="propertyManager" />
        </property>
        <property name="typeService">
            <ref bean="typeService" />
        </property>        
    </bean>
    
    <!-- Conditional bean definition based on property -->
    <!-- Use MockSolrUtil when Solr is disabled -->
    <bean id="solrUtil" class="jp.aegif.nemaki.cmis.aspect.query.mock.MockSolrUtil">
        <property name="propertyManager">
            <ref bean="propertyManager" />
        </property>
        <property name="typeService">
            <ref bean="typeService" />
        </property>        
    </bean>

</beans>